
@{     
    bool isLogged = true;
    EDCOUTEQ.Models.LoginViewModel credenciales = (EDCOUTEQ.Models.LoginViewModel)Session["usuario"];
    if (credenciales == null)
    {
        isLogged = false;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" >
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Recursos/CSS/FooterStyle.css" rel="stylesheet" />
    <link href="~/Recursos/CSS/NavStyle.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <ul>
            @{
                if (isLogged)
                {
                    <li id="menu"><a href="@Url.Action("Logout", "Cuentas")">Salir</a></li>
                    <li id="menu"><a href="">Bienvenido @credenciales.Email</a></li>
                    <li id="menu"><a href="@Url.Action("Admin","Cursos")">Administrador</a></li>
                }
                else
                {
                    <li id="menu"><a href="@Url.Action("Login", "Cuentas")">Ingresar</a></li>
                }
            }
            <li id="menu"><a href="">Cursos</a></li>
            <li id="menu"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li><img src="https://www.uteq.edu.mx/Images/Logo%20UTEQ%20blanco.png" alt="uteq_logo" /></li>
        </ul>
    </div>
    @RenderBody()

    <div class="footer">
        <p>&copy; UTEQ 2022</p>
    </div>

</body>

<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js">
</script>

</html>
